.basket-summary
    display flex
    flex-direction column
    justify-content center
    align-items center
    min-height 75%

    .basket-summary__container
        min-width 50%

        .basket-summary__title
            text-align center
            margin-bottom 30px

        .basket-summary__content
            margin-bottom 20px

        .basket-summary__table > tbody > tr > th
            vertical-align middle

        .basket-summary__actions
            text-align center

            *:not(:first-child)
                margin-left 5px

        .form-group
            margin-bottom 0
