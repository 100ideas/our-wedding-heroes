maximumSize()
    width 100%
    height 100%

.landing
    maximumSize()
    margin-top -20px

.landing__header
    background-position center center
    background-attachment fixed
    background-repeat no-repeat
    background-size cover
    maximumSize()

.landing__header__overlay
    position absolute
    height 100%
    width 100%
    background-color black
    opacity 0.1
    color white

.landing__header__content
    position relative
    transform translate(-50%, -50%)
    top 85%
    left 50%
    color white

.landing__header__content__header
    font-size 4.5em
    font-weight 700
    text-align center

.landing__section
    padding 50px 0
    margin-left auto
    margin-right auto
    text-align center

.landing__section:before
    display table
    content ' '

.landing__section:after
    display table
    content ' '
    clear both

.landing__section--primary
    color white
    background rgba(31, 119, 180, 0.85)

.landing__section__heading
    text-transform capitalize
    text-align center

.landing__section__container
    text-align left

.landing__section__panel
    color black

.landing__section__pre
    white-space pre-wrap

.table--vertical-align-middle
    > thead > tr > th
    > tbody > tr > th
    > tfoot > tr > th
    > thead > tr > td
    > tbody > tr > td
    > tfoot > tr > td
        vertical-align middle
