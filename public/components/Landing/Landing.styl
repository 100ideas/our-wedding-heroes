maximumSize()
    width 100%
    height 100%

.landing
    maximumSize()
    margin-top -20px
    font-size large

.landing__header
    background-position center center
    background-attachment fixed
    background-repeat no-repeat
    background-size cover
    maximumSize()

.landing__header__overlay
    position absolute
    height 100%
    width 100%
    background-color black
    opacity 0.1
    color white

.landing__header__content
    position relative
    transform translate(-50%, -50%)
    top 85%
    left 50%
    color white

.landing__header__content__header
    font-size 4.5em
    font-weight 700
    text-align center

.landing__section
    padding 50px 0
    margin-left auto
    margin-right auto
    text-align center

.landing .landing__section:last-of-type
    padding-bottom 0

.landing__section:before
    display table
    content ' '

.landing__section:after
    display table
    content ' '
    clear both

.landing__section--primary
    color white
    background rgba(31, 119, 180, 0.85)

.landing__section__heading
    text-transform capitalize
    text-align center
    font-size 2.5em

.landing__section__container
    text-align left

.landing__section__panel
    color black

.landing__section__content
    padding-top 10px
    max-width 75%
    margin auto
    font-size 0.9em

.landing__section__pre
    white-space pre-wrap

.basket
    position fixed
    top 0
    right 0
    padding 10px
    background rgba(0, 0, 0, 0.8)
    color #FFFFFF
    min-width 150px
    width 15%
    border-radius 5px
    text-align center

    ul
        list-style none
        padding-left 0

        li
            text-transform capitalize
