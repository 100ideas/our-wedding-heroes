maximumSize()
    width 100%
    height 100%

.landing
    maximumSize()
    font-size large

    .landing__section:last-of-type
        padding-bottom 0

.landing__header
    background-position center center
    background-attachment fixed
    background-repeat no-repeat
    background-size cover
    maximumSize()

.landing__header__overlay
    position absolute
    height 100%
    width 100%
    background-color black
    opacity 0.1
    color white

.landing__header__content
    color white
    display flex
    flex-direction column
    justify-content flex-end
    text-align center
    maximumSize()

.landing__header__content__header
    font-size 4.5em
    font-weight 700

.landing__section
    padding 50px 0
    text-align center

    &:nth-child(even)
          color white
          background rgba(31, 119, 180, 0.85)

    &:before
        display table
        content ' '

    &:after
        display table
        content ' '
        clear both

.landing__section__container
    text-align left

.landing__section__panel
    color black

.landing__section__pre
    white-space pre-wrap

@media (max-width 599px)
    .landing
        font-size medium

    .landing__header__content__header
        font-size 3em
