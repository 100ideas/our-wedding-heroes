maximumSize()
    width 100%
    height 100%

.landing
    maximumSize()
    font-size large

    .landing__section:last-of-type
        padding-bottom 0

.landing__header
    background-position center center
    background-attachment fixed
    background-repeat no-repeat
    background-size cover
    maximumSize()

.landing__header__overlay
    position absolute
    height 100%
    width 100%
    background-color black
    opacity 0.1
    color white

.landing__header__content
    color white
    display flex
    flex-direction column
    justify-content flex-end
    text-align center
    maximumSize()

.landing__header__content__header
    font-size 4.5em
    font-weight 700

.landing__section
    padding 50px 0
    margin-left auto
    margin-right auto
    text-align center

    &:nth-child(even)
          color white
          background rgba(31, 119, 180, 0.85)

    &:before
        display table
        content ' '

    &:after
        display table
        content ' '
        clear both

.landing__section__heading
    text-transform capitalize
    text-align center
    font-size 2.5em

.landing__section__container
    text-align left

.landing__section__panel
    color black

.landing__section__content
    padding-top 10px
    max-width 75%
    margin auto
    font-size 0.9em

.landing__section__pre
    white-space pre-wrap

.basket
    position fixed
    top 0
    right 0
    padding 10px
    background rgba(0, 0, 0, 0.8)
    color #FFFFFF
    min-width 150px
    width 15%
    border-radius 5px
    text-align center

    ul
        list-style none
        padding-left 0

        li
            text-transform capitalize

@media (max-width 599px)
    .landing__header__content__header
        font-size 3em
